import os
import sys
import time
import json
import socket

# Get the values to send for the files on this factory

try:
  monCookie = open('/etc/viab/moncookie','r').readline().strip()
except:
  print 'Failed to read /etc/viab/moncookie'
  sys.exit(1)

try:
  viabVersion = open('/etc/viab/version','r').readline().strip()
except:
  print 'Failed to read /etc/viab/version'
  sys.exit(1)

try:
  vacVersion = open('/var/lib/vac/VERSION','r').readline().strip().split('=')[1]
except:
  print 'Failed to read /var/lib/vac/VERSION'
  sys.exit(2)

# Construct the JSON message

message = json.dumps({ 'factory'      : os.uname()[1],
                       'cookie'       : monCookie,
                       'viab_version' : viabVersion,
                       'vac_version'  : vacVersion,
                       'time_sent'    : int(time.time()) })

sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
sock.settimeout(1.0)

# Send 5 copies, 1 second apart, to mitigate any packet loss

for i in [1,2,3,4,5]:
  try:
    sock.sendto(message, ('viab.gridpp.ac.uk', 8884))
  except Exception as e:
    print 'Failed to send ViaBmon UDP message ' + str(i) + ' (' + str(e) + ')'
  else:
    print 'Sent ViaBmon UDP message ' + str(i)

  time.sleep(1.0)

sys.exit(0)
